/* page/list/list.wxss */
@import '../comonm-list.wxss';
.recommend-container {
    padding: 10rpx 25rpx;
}
.recommend-article {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.date {
    position: relative;
    font-size: 52rpx;
    padding-bottom: 14px;
}

.date::after {
    position: absolute;
    bottom: 0;
    left: 52rpx;
    content: '';
    display: block;
    width: 114rpx;
    height: 4rpx;
    background-color: #ccc;
}

.recommend-title {
    margin: 28rpx 0;
    font-size: 28rpx;
}

.recommend-container image {
    width: 100%;
}

.recommend-box text {
    display: inline-block;
    border: 1px solid #000;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    margin: 20rpx 20rpx 20rpx 0; 
}

.recommend-box text:nth-of-type(1) {
    background-color: #000;
    color: #fff;
}

