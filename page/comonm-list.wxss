.lsit-container {
    background-color: #ccc;
    padding: 20rpx;
}

.per-article {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    border-radius: 10rpx;
}

.article-head {
    padding: 20rpx 20rpx;
}

.article-head image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
}

.article-handle button {
    width: 60rpx;
    height: 60rpx;
    background-color: transparent;
}

.article-handle button image {
    width: 60rpx;
    height: 60rpx;
    margin-left: -30rpx;
}

.article-handle button::after {
    border: none;
}

.article-cover {
    width: 100%;
    border-radius: 10rpx;
}

.article-title {
    font-size: 40rpx;
    margin: 20rpx 20px;
}

.article-handle-box {
    padding: 0 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.article-type {
    border: 1px solid #000;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    margin-bottom: 20rpx; 
}

.article-handle {
    display: flex;
}

.article-handle view {
    margin: 0 5rpx;
}

.article-handle view image{
    width: 50rpx;
    height: 50rpx;
}